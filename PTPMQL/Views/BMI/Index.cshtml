@model YourNamespace.Models.BMIModel

@{
    ViewData["Title"] = "Tính chỉ số BMI";
}

<h2>Tính Chỉ Số BMI</h2>

<form method="post">
    <div>
        <label for="Weight">Cân nặng (kg):</label>
        <input asp-for="Weight" class="form-control" />
        <span asp-validation-for="Weight" class="text-danger"></span>
    </div>

    <div>
        <label for="Height">Chiều cao (m):</label>
        <input asp-for="Height" class="form-control" />
        <span asp-validation-for="Height" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary mt-2">Tính BMI</button>
</form>

@if (ViewBag.BMI != null)
{
    <h3>Kết quả</h3>
    <p><strong>Chỉ số BMI:</strong> @ViewBag.BMI</p>
    <p><strong>Phân loại:</strong> @ViewBag.Category</p>
}
